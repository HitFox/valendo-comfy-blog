.page-header
  = link_to t('.new_blog_category'), new_comfy_admin_blog_category_path(@site, @blog), :class => 'btn btn-default pull-right'
  %h2= t('.page_title')

= comfy_paginate @categories

%table.table.table-hover
  %tr
    %th.main= t('.name')
    %th

  - @categories.each do |category|
    %tr
      %td.main
        = category.name
      %td
        .btn-group.btn-group-sm
          = link_to t('.edit'), edit_comfy_admin_blog_category_path(@site, @blog, category), :class => 'btn btn-default'
          = link_to t('.delete'), comfy_admin_blog_category_path(@site, @blog, category), :method => :delete, :data => {:confirm => t('.confirm_message')}, :class => 'btn btn-danger'

= comfy_paginate @categories
